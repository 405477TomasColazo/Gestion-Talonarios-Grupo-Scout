<Window x:Class="GestionTalonarios.UI.Views.NuevoTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionTalonarios.UI.Views"
        mc:Ignorable="d"
        Title="Nuevo Ticket de Locro" 
        Height="480" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F8FF"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Grid.Row="0" 
                  Text="Venta de Locro - Grupo Scout José Hernández" 
                  FontWeight="Bold" 
                  FontSize="16" 
                  HorizontalAlignment="Center"
                  Foreground="#0D47A1"
                  Margin="0,0,0,15"/>

        <!-- Formulario -->
        <StackPanel Grid.Row="1" Margin="0,10">
            <!-- Datos del cliente -->
            <TextBlock Text="Cliente" 
                      FontWeight="Bold" 
                      Foreground="#0D47A1"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Nombre:" Margin="0,5,0,0"/>
            <TextBox x:Name="txtNombreCliente" 
                    Padding="5"
                    Margin="0,3,0,10"/>

            <!-- Numero de talonario -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nro de talonario:" Margin="0,5,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtCode" 
                         Padding="5"
                         Margin="0,3,0,10"/>
            </Grid>
            

            <!-- Cantidades -->
            <TextBlock Text="Cantidad de porciones" 
                      FontWeight="Bold" 
                      Foreground="#0D47A1"
                      Margin="0,10,0,10"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                          Text="Porciones Tradicionales:" 
                          VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                        x:Name="txtPorcionesTrad" 
                        Padding="5" Text="1" 
                        TextAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="0" 
                          Text="Porciones Veganas:" 
                          VerticalAlignment="Center"
                          Margin="0,10,0,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                        x:Name="txtPorcionesVeg" 
                        Padding="5" Text="0" 
                        TextAlignment="Center"
                        Margin="0,10,0,0"/>
            </Grid>

            <!-- Precio unitario y total -->
            <Grid Margin="0,15,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                          Text="Precio por porción:" 
                          VerticalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                        x:Name="txtPrecioUnitario" 
                        Text="$ 0.00" 
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        FontWeight="SemiBold"/>

                <TextBlock Grid.Row="1" Grid.Column="0" 
                          Text="TOTAL A PAGAR:" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"
                          Margin="0,10,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                          x:Name="txtTotal" 
                          Text="$ 0.00" 
                          FontWeight="Bold"
                          Foreground="#1976D2"
                          FontSize="16"
                          Margin="10,10,0,0"/>
            </Grid>

            <!-- Estado -->
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="0" 
                         x:Name="chkPagado" 
                         Content="Pagado" 
                         IsChecked="True"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"/>

                <CheckBox Grid.Column="1" 
                         x:Name="chkEntregado" 
                         Content="Entregado" 
                         IsChecked="False"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"/>
            </Grid>

            <!-- Observaciones -->
            <TextBlock Text="Observaciones:" Margin="0,15,0,0"/>
            <TextBox x:Name="txtObservaciones" 
                    TextWrapping="Wrap" 
                    Height="40"
                    Padding="5"
                    Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,15,0,0">
            <Button Content="Cancelar" 
                   Padding="15,5" 
                   Margin="0,0,10,0"
                   Click="BtnCancelar_Click"/>
            <Button Content="Guardar" 
                   Padding="15,5" 
                   Background="#2E7D32" 
                   Foreground="White"
                   Click="BtnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window>
